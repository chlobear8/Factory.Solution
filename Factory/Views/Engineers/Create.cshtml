@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add a new engineer</h1>

@using (@Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})

  @Html.LabelFor(model => model.Machine)
  @Html.DropDownList("MachineId")

  <input type = "submit" value = "Add a new engineer" class = "btn btn-primary" />
}

<p>@Html.ActionLink("Show all engineers", "Index")</p>