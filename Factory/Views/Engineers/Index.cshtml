@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h2>No engineers added yet!</h2>
}
else 
{
  <ul>
  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add a new engineer", "Create")</p>