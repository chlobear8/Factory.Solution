@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Assignments</h1>

@if (@Model.Count == 0)
{
  <h3>No assignments have been added yet!</h3>
} 

@foreach (Assignment assignment in Model)
{
  <li>@Html.ActionLink($"{assignment.AssignmentId}", "Details", new { id = assignment.AssignmentId })</li>
}

<p>@Html.ActionLink("Add new assignment", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>